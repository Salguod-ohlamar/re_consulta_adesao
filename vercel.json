{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      },
      "env": { 
        "REACT_APP_API_BASE_URL": "@react_app_api_base_url" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js" 
    },
    {
      "src": "/", 
      "dest": "/frontend/index.html"
    },
    {
      "src": "/static/(.*)", 
      "dest": "/frontend/static/$1" 
    },
    {
      "src": "/(.*)", 
      "dest": "/frontend/index.html" 
    }
  ]
}
